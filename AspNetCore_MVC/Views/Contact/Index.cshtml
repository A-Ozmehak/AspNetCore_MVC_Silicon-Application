@model ContactViewModel

<section id="contact">
    <div class="container">
        <div class="breadcrumbs">
            <p><i class="fa-solid fa-house"></i> Home</p>
            <i class="fa-solid fa-angles-right"></i>
            <p>Contact</p>
        </div>
        <div class="content">
            <div class="left-container">
                <div class="title-box">  
                    <h1>@Model.Title</h1>
                </div>
                @await Html.PartialAsync("~/Views/Sections/_ContactOptionPartial.cshtml", Model.Content)
            </div>

            <div class="form-container">
                @await Html.PartialAsync("~/Views/Sections/_ContactFormPartial.cshtml")
            </div>
        </div>  
    </div>
    <div class="map">
        <img src="~/images/contact-map.svg" alt="Map of the company location" />
    </div>
</section>