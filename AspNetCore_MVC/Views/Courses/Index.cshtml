@model CoursesIndexViewModel

<section id="courses">
    <div class="container">
        <div class="breadcrumbs">
            <p><i class="fa-solid fa-house"></i> Home</p>
            <i class="fa-solid fa-angles-right"></i>
            <p class="current-page">Courses</p>
        </div>
        <div class="titleAndFilter">
            <h1>Courses</h1>
            <form>
                <div class="filterAndSearch">
                  @*   <select name="categories" id="categories">
                         <option value="all">All Categories</option>
                         <option value="digital">Digital</option>
                         <option value="css">CSS</option>
                         <option value="python">Python</option>
                         <option value="game">Game</option>
                    </select> *@
                     <div class="select">
                         <div class="selected">All Categories</div>
                         <div class="select-options">
                             <div class="option" data-value="all">All Categories</div>
                            @if (Model.Categories != null)
                            {
                                foreach (var category in Model.Categories)
                                {
                                    <div class="option" data-value="@category.CategoryName">@category.CategoryName</div>
                                }
                            }
                        </div>
                     </div>

                    <div class="input-container">
                        <input id="searchQuery" name="searchQuery" placeholder="Search courses" />
                        <i class="fa-light fa-magnifying-glass icon"></i>
                    </div>
                </div>
            </form>
        </div>
        <div class="courses-section">
            <div id="addMessage"></div>
            @if (Model != null)
{
                @foreach (var course in Model.Courses)
                {
                    @await Html.PartialAsync("~/Views/Sections/_CoursePartial.cshtml", course)
                }
            }


            <span class="information">
                @if (ViewData["Status"]?.ToString() == "Success")
                {
                    <span class="alert alert-success">
                        You have been subscribed
                    </span>
                }             
                else if (ViewData["Status"]?.ToString() == "Unauthorized")
                {
                    <span class="alert alert-danger">
                        Something went wrong. Please contact web admin.
                    </span>
                }
            </span>

        </div>
        @await Html.PartialAsync("~/Views/Sections/_PaginationPartial.cshtml")
        @await Html.PartialAsync("~/Views/Sections/_BannerPartial.cshtml")
    </div>

</section>
