<aside>
    <div class="profile-info">
        <img src="~/images/avatar.svg" alt="@($"{Model.ProfileInfo.FirstName} {Model.ProfileInfo.LastName}")" />
        <h5>@($"{Model.ProfileInfo.FirstName} {Model.ProfileInfo.LastName}")</h5>
        <p>@Model.ProfileInfo.Email</p>
    </div>
    <nav>
        <a class="btn-theme-s" asp-controller="Account" asp-action="Details">Account Details</a>
        <a class="btn-theme-s" asp-controller="Account" asp-action="Security">Security</a>
        <a class="btn-theme-s" asp-controller="Account" asp-action="SavedCourses">Saved Courses</a>
        <a class="btn-transparent" asp-controller="Auth" asp-action="SignOut">Sign out</a>

        @* <a class="@(ViewBag.ActiveAction == "account" ? "active" : "")" href="@Url.Action("account", "Account")">Some Action</a> *@

    </nav>
</aside>
