@{
    var themeMode = Context.Request.Cookies["ThemeMode"] ?? "light";
    var isDark = themeMode == "dark";
}

<section id="error">
    <div class="container">
        <img src="~/images/@(isDark ? "404-white.svg" : "404.svg" )" alt="Error image" id="error-image" />
        <div class="text-container">
            <h2>Ooops!</h2>
            <p>The page you are looking for is not available.</p>
            <a class="btn-theme-s" href="/"><i class="fa-solid fa-house"></i> Go to homepage</a>
        </div>
    </div>
</section>